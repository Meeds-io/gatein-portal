    <Locale lang="hu" messages="locale/hu_ALL.xml"/>
    <Require feature="dynamic-height"/>
    <Require feature="minimessage"/>
    <Require feature="views"/>
  </ModulePrefs>
  <UserPref name="servicesURL" display_name="__MSG_services_url__" default_value="/portal/rest/management"
            required="true"/>
  <Content type="html" view="home">
    <![CDATA[
        <head><title>ServicesManagement</title></head>
        <link rel="stylesheet" type="text/css" href="style/home.css"></link>
        <script src="script/jquery-1.4.2.min.js" type="text/javascript"></script>		
		<script src="script/script.js" type="text/javascript"></script>	
		<script src="script/handlers.js" type="text/javascript"></script>
		<script type="text/javascript">
			gadgets.util.registerOnLoadHandler(eXo.gadget.ServicesManagement.init);			
		</script>
                <div class="ServicesManagement">
			<div class="UIGadget">
			  <div class="TopGadget">
                <div class="ServicesBox ClearFix">
                    <div class="Text"><label for="servicesSelector">__MSG_services__</label></div>
                    <select id="servicesSelector"></select>
                    <a class="DesIconHome"><span></span></a>
                </div>
                <p class="DescriptionBox"><b>__MSG_description__:</b> <span id="ServiceDescription">__MSG_noDescription__</span></p>
              </div>
              <div class="TitleGrid ClearFix">
                <div class="BgTitle ClearFix">
                    <h3>__MSG_method__</h3>
                    <select id="methodsSelector"></select>  
                </div>
              </div>
			
			  <div class="GadgetGrid">
				<table cellspacing="0" class="UIGrid" summary="Services Management configuration">
					<thead>
						<tr>
							<th class="TableHeader FieldComponent Text">__MSG_name__</th>
							<th class="TableHeader Text">__MSG_value__</th>
						</tr>
					</thead>
					<tbody>
						<tr class="EvenRow">
							<td><div class="Text">__MSG_name__</div></td>
							<td><div class="Text" id="methodName"></div></td>
						</tr>
						<tr class="OddRow">
							<td><div class="Text">__MSG_description__</div></td>
							<td><div class="Text" id="methodDescription"></div></td>
						</tr>
						<tr class="EvenRow">
							<td><div class="Text">__MSG_method__</div></td>
							<td><div class="Text" id="reqMethod"></div></td>
						</tr>
						<tr class="OddRow">
							<td><div class="Text">__MSG_parameters__</div></td>
							<td id="test">
							  <div class="SkinID Text" id="parametersTable"></div>
							</td>
						</tr>
					</tbody>
				</table> 
				<!--End methods UIGrid-->
			  </div>	
			  
			  <!-- Start Properties UIGrid -->
			  <div class="TitleGrid ClearFix">
                <div class="BgTitle ClearFix">
                    <h3>__MSG_property__</h3>
                    <select id="propertiesSelector"></select>
                </div>
              </div>
              <div class="GadgetGrid">
                <table cellspacing="0" class="UIGrid" summary="Services Management configuration">
                    <thead>
                        <tr>
                            <th class="FieldComponent" scope="col">__MSG_name__</th>
                            <th scope="col">__MSG_value__</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="EvenRow">
                            <td><div class="Text">__MSG_name__</div></td>
                            <td><div class="Text" id="propertyName"></div></td>
                        </tr>
                        <tr class="OddRow">
                            <td><div class="Text">__MSG_description__</div></td>
                            <td><div class="Text" id="propertyDescription"></div></td>
                        </tr>
                    </tbody>
                </table> 
                <!--End Properties UIGrid-->
               </div>		
               </div>						
		</div>				

	]]>
  </Content>
  <Content type="html" view="canvas">
    <![CDATA[
        <head><title>ServicesManagement</title>
        <style type="text/css">
                  .skipHidden { position:absolute;left:-10000px;top:auto;width:1px;height:1px;overflow:hidden; }
        </style>
        </head>
        <link rel="stylesheet" type="text/css" href="style/canvas.css"></link>
        <script src="script/jquery-1.4.2.min.js"></script>     
		<script src="script/script.js"></script>
		<script src="script/handlers.js"></script>
		<script type="text/javascript">
			gadgets.util.registerOnLoadHandler(eXo.gadget.ServicesManagement.init);
		</script>
	
                  <div class="ServicesManagement">	
		  <div class="UIGadget">
			<div class="TopGadget">
				<table cellspacing="0" style="margin: 0px auto;" summary="Services Management configuration">
					<tbody>
						<tr>
                                                        <td><div class="Text"><label for="servicesSelector">__MSG_services__</label></div></td>
							<td>
								<select id="servicesSelector"></select>							
							</td>
						</tr>
						<tr>
                                                  <td class="Description" colspan="2"><p><span class="skipHidden">Information Icon</span><b>__MSG_description__: </b><span id="ServiceDescription">__MSG_noDescription__</span></p></td>
                        </tr>
					</tbody>
				</table> 
			</div>
			
			<div class="TitleGadget ClearFix">
                          <div id="MethodsTab" class="Tab TabSelected"><a href="javascript:;" class="TabLink">__MSG_method__</a></div>
                          <div id="PropertiesTab" class="Tab"><a href="javascript:;" class="TabLink">__MSG_property__</a></div>
			</div>
			<div id="ServiceMethods" class="GadgetGrid GadgetGmCanvasMessage ContentSelected">
				<table cellspacing="0" class="UIGrid" summary="Services Management configuration">
					<thead>
						<tr>
							<th class="FieldComponent" scope="col">__MSG_name__</th>
							<th class="FieldComponent" scope="col">__MSG_description__</th>
							<th class="FieldComponent FixWidth" scope="col">__MSG_method__</th>
							<th class="FieldComponent" scope="col">__MSG_parameters__</th>
							<th class="FixWidth" scope="col">__MSG_action__</th>
						</tr>
					</thead>
					<tbody id="methodsForCanvas"></tbody>
				</table> 
				<!--End UIGrid for methods-->
			</div>
			
		    <div id="ServiceProperties" class="GadgetGrid GadgetGmCanvasMessage">
		         <table cellspacing="0" class="UIGrid" summary="Services Management configuration">
		            <thead>
		               <tr>
		                  <th class="FieldComponent" scope="col">__MSG_name__</th>
		                  <th class="FieldComponent" scope="col">__MSG_description__</th>
		                  <th scope="col">__MSG_action__</th>
		               </tr>
		            </thead>
		            <tbody id="propertiesForCanvas"></tbody>
		         </table>
		         <!--End UIGrid for properties-->
		    </div>
			<div class="BoxFile" id="resultMessage"></div>
		</div>
                </div>
	]]>
  </Content>
</Module>
