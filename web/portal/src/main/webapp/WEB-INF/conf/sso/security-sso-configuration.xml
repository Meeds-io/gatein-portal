<configuration
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
    xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <key>org.exoplatform.web.security.sso.SSOHelper</key>
    <type>org.exoplatform.web.security.sso.SSOHelper</type>
    <init-params>
      <value-param>
        <name>isSSOEnabled</name>
        <value>${gatein.sso.enabled:false}</value>
      </value-param>
      <value-param>
        <name>skipJSPRedirection</name>
        <value>${gatein.sso.skip.jsp.redirection}</value>
      </value-param>
      <value-param>
        <name>SSORedirectURLSuffix</name>
        <value>${gatein.sso.uri.suffix:/sso}</value>
      </value-param>
    </init-params>
  </component>

</configuration>
